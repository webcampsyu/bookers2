<div>
 <%= flash[:notice] %>
</div>

<div class="container">
 <div class="row">
  <div class="col-md-3">

<%= render 'userinfo', user: @user %>

<%= render 'books/list', book: @book %>
  </div>


<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table>
   <tr>
    <th colspan="1"></th>
    <th>Title</th>
    <th>Body</th>
   </tr>
   
<% @books.each do |book| %>
   <tr>
    <td> 
     <%= link_to user_path(@user.id) do %>
     <%= image_tag book.user.get_profile_image(100, 100) %>
     <% end %>
    </td>
    <td> <%=link_to book.title, book_path(book.id) %></td>
    <td> <%=book.body %></td>
   </tr>
<% end %>
</table>

</div>
</div>
</div>
