 <h2>User info</h2>
  <%= image_tag user.get_profile_image(100, 100) %>
  
 <table>
  <tr>
   <th>name</th>
   <th><%= user.name %></th>
  </tr>
   <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
   </tr>
 </table>
 
 <%# if user == current_user %>
  <p><%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
   <i class="fas fa-user-cog"></i>
     <% end %>
  </p>
 <%# end %>
